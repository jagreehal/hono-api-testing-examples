{
  "name": "hono-api-testing-examples",
  "version": "1.0.0",
  "description": "Examples of how to test Hono APIs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx --env-file .env --watch src/index.ts",
    "lint": "npx @biomejs/biome check --write ./src",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "test": "vitest",
    "test:playwright": "npx playwright test src/playwright-test-examples"
  },
  "keywords": [
    "nodejs",
    "api",
    "testing",
    "hono"
  ],
  "author": "Jag Reehal",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "1.8.2",
    "@playwright/test": "^1.44.1",
    "@types/node": "^20.14.7",
    "globals": "^15.6.0",
    "msw": "^2.3.1",
    "nock": "beta",
    "tsx": "^4.15.7",
    "typescript": "5.5.2",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.11.4",
    "@hono/zod-openapi": "^0.14.5",
    "@scalar/hono-api-reference": "^0.5.76",
    "hono": "^4.4.7",
    "zod": "^3.23.8"
  }
}
